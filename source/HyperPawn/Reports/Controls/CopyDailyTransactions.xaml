<UserControl x:Class="Shell.Reports.Controls.CopyDailyTransactions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Date to copy: " VerticalAlignment="Center"/>
            <TextBox Name="CopyTxDateTextbox" MinWidth="100" KeyDown="CopyTxDateTextbox_KeyDown"/>
            <Button Name="CopyButton" Click="CopyButton_Click" Content="Copy To Clipboard"/>
        </StackPanel>
    </StackPanel>
</UserControl>
