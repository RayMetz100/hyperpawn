<Window x:Class="Shell.JunkMainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="HyperPawn" Width="1024" Height="768" ResizeMode="CanResizeWithGrip" KeyDown="MainMenuWindow_KeyDown">
    <StackPanel>
        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="40" >HyperPawn</Label>
        <ContentControl Height="100"/>
        <UniformGrid Grid.Column="0" Grid.Row="2" Rows="3" Columns="2" Height="300">
            <UniformGrid Rows="1">
                <Label FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center">Delete Loan:</Label>
                <TextBox FontWeight="Bold" FontSize="20" HorizontalContentAlignment="Center" Background="Transparent" VerticalContentAlignment="Center" Name="DeleteLoanTextbox" KeyDown="DeleteLoan_Enter"></TextBox>
            </UniformGrid>
            <Button Name="test" Click="test_Click"/>
        </UniformGrid>
        <TextBox Name="Barcode" TextWrapping="WrapWithOverflow" MinHeight="50" AcceptsReturn="False" AcceptsTab="False" KeyDown="Barcode_KeyDown" />
    </StackPanel>
</Window>
